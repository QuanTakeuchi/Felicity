<Draw>:
    size: self.parent.size
    BoxLayout:
        id: boxLayout
        size: self.parent.size
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                id: rectid
                pos: self.parent.pos
                size: self.parent.size
        
<DrawingWidget>:
    bgColor: [1, 0, 0, 1]
    Draw:
        id: layout
        auto_bring_to_front: False
